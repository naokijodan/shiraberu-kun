{
  "manifest_version": 3,
  "name": "しらべる君 - eBay価格リサーチ",
  "version": "1.2.0",
  "description": "メルカリ⇔eBay双方向リサーチ。価格計算、価格分析、テラピーク連携、AI翻訳で輸出入ビジネスをサポート。",
  "default_locale": "ja",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://jp.mercari.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "しらべる君",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://jp.mercari.com/*"
      ],
      "js": ["price-calculator.js", "content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://www.ebay.com/sch/*"
      ],
      "js": ["ebay-analyzer.js"]
    },
    {
      "matches": [
        "https://www.ebay.com/sh/research*"
      ],
      "js": ["terapeak-analyzer.js"]
    },
    {
      "matches": [
        "https://www.ebay.com/itm/*"
      ],
      "js": ["price-calculator.js", "ebay-product.js"]
    }
  ]
}
